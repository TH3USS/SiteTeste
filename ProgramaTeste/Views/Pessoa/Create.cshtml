@model Pessoa

<h2 class="text-uppercase"><strong>Cadastrar Pessoa</strong></h2>
    <br />


<form asp-action="Create" method="post">
    <div class="form-group">
        <label class="label" for="Nome">Nome</label>
        <input type="text" id="Nome" name="Nome" class="form-control input" required />
    </div>
    <div class="form-group">
        <label class="label" for="Telefone">Telefone</label>
        <input type="text" id="Telefone" name="Telefone" class="form-control input" required />
    </div>
    <div class="form-group">
        <label class="label" for="CPF">CPF</label>
        <input type="text" id="CPF" name="CPF" class="form-control input" required />
    </div>
    <div class="form-button">
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a href="@Url.Action("Index", "Pessoa")" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
@if (TempData["Message"] != null)
{
    <script>
        alert('@TempData["Message"]');
    </script>
}