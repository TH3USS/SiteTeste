@model Pessoa

<h2>Editar Pessoa</h2>
<br />

<form asp-action="Edit" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="form-group">
        <label class="label" for="Nome">Nome</label>
        <input type="text" id="Nome" name="Nome" value="@Model.Nome" class="form-control input" required />
    </div>
    <div class="form-group">
        <label class="label" for="Telefone">Telefone</label>
        <input type="text" id="Telefone" name="Telefone" value="@Model.Telefone" class="form-control input" required />
    </div>
    <div class="form-group">
        <label class="label" for="CPF">CPF</label>
        <input type="text" id="CPF" name="CPF" value="@Model.CPF" class="form-control input" required />
    </div>
    <div class="form-button">
		<button type="submit" class="btn btn-primary">Salvar</button>
		<a href="@Url.Action("Index", "Pessoa")" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
@if (TempData["Message"] != null)
{
    <script>
        alert('@TempData["Message"]');
    </script>
}